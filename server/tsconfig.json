{
  "include": ["src"],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "lib",
    "module": "commonjs",
    "target": "es2018",
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "strict": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "allowJs": true
  },
  "ts-node": {
    "transpileOnly": true
  }
}
