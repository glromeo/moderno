{
  "name": "@moderno/server",
  "version": "1.0.1",
  "description": "A modern dev server professional and simple to use",
  "author": "Gianluca Romeo <glromeo@gmail.com> (https://github.com/glromeo/moderno)",
  "license": "MIT",
  "main": "lib/index.js",
  "files": [
    "/cert/codebite.pem",
    "/cert/localhost.key",
    "/cert/localhost.crt",
    "/lib",
    "/resources"
  ],
  "bin": {
    "moderno": "lib/cli.js"
  },
  "keywords": [
    "http2",
    "server",
    "node",
    "babel"
  ],
  "bugs": {
    "url": "https://github.com/glromeo/moderno/issues"
  },
  "homepage": "https://github.com/glromeo/moderno/tree/master/moderno",
  "repository": {
    "type": "git",
    "url": "https://github.com/glromeo/moderno.git"
  },
  "dependencies": {
    "@babel/core": "^7.14.8",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-syntax-import-meta": "^7.10.4",
    "@babel/plugin-transform-runtime": "^7.14.5",
    "@babel/runtime": "^7.14.8",
    "@moderno/logger": "^1.0.1",
    "@moderno/router": "^1.0.0",
    "@moderno/web-modules": "^1.0.3",
    "chokidar": "^3.5.2",
    "cors": "^2.8.5",
    "es-module-lexer": "^0.7.1",
    "etag": "^1.8.1",
    "fast-url-parser": "^1.1.3",
    "fast-zlib": "^2.0.1",
    "find-my-way": "^4.3.3",
    "glob": "^7.1.7",
    "he": "^1.2.0",
    "htmlparser2": "^6.1.0",
    "http-proxy": "^1.18.1",
    "http-status-codes": "^2.1.4",
    "mime-db": "^1.49.0",
    "nano-memoize": "^1.2.1",
    "node-sass": "^6.0.1",
    "picomatch": "^2.3.0",
    "resolve": "^1.20.0",
    "router": "^1.3.5",
    "source-map-support": "^0.5.19",
    "yargs": "^17.0.1"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-proposal-decorators": "^7.14.5",
    "@babel/preset-typescript": "^7.14.5",
    "@types/babel__core": "^7.1.15",
    "@types/benchmark": "^2.1.1",
    "@types/connect": "^3.4.35",
    "@types/cors": "^2.8.12",
    "@types/etag": "^1.8.1",
    "@types/http-proxy": "^1.17.7",
    "@types/node": "^16.4.10",
    "@types/node-fetch": "^2.5.12",
    "@types/node-sass": "^4.11.2",
    "@types/qs": "^6.9.7",
    "@types/ws": "^7.4.7",
    "@types/yargs": "^17.0.2",
    "benchmark": "^2.1.4",
    "coveralls": "^3.1.1",
    "linkfs": "^2.1.0",
    "memfs": "^3.2.2",
    "node-fetch": "^2.6.0",
    "nyc": "^15.1.0",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5",
    "unionfs": "^4.4.0"
  },
  "scripts": {
    "all": "cd test/fixture && yarn install && cd ../../demo && yarn install",
    "demo": "node lib/cli.js --root ../examples/demo",
    "prof": "node --prof lib/cli.js --root ../examples/demo",
    "inspect": "node --inspect lib/cli.js --root ../examples/demo",
    "coveralls": "cat ./coverage/lcov.info | node node_modules/.bin/coveralls",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "nyc mocha test/**/*.test.ts"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "test/**/*.ts"
    ],
    "reporter": [
      "text"
    ],
    "all": false,
    "cache": true
  },
  "mocha": {
    "require": [
      "ts-node/register"
    ]
  }
}
