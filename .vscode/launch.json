  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "CLI",
      "skipFiles": [
        "<node_internals>/**", 
        "node_modules/**"
      ],
      "runtimeArgs": ["-r", "ts-node/register/transpile-only"],
      "program": "${workspaceFolder}\\server\\src\\cli.ts",
      "outFiles": [
        "${workspaceFolder}/**/*.js"
      ]
    }
  ]
}